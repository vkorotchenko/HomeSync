<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    android:layout_marginEnd="5dp"
    android:paddingTop="5dp"
    tools:showIn="@layout/activity_main">

    <LinearLayout
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_width="397dp"
        android:layout_height="661dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="7dp"
        tools:layout_editor_absoluteY="14dp">

        <TextView
            android:id="@+id/textViewBlinds"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:lineSpacingExtra="10sp"
            android:text="@string/blinds"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            tools:layout_editor_absoluteX="34dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3">

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="sendElectronicsBlindsUp"
                android:text="@string/up" />

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="sendElectronicsBlindsStop"
                android:text="@string/stop" />

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="sendElectronicsBlindsDown"
                android:text="@string/down" />
        </LinearLayout>

        <TextView
            android:id="@+id/textViewLights"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:text="@string/lights"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            tools:layout_editor_absoluteX="34dp" />
        <Button
            android:id="@+id/button4"
            android:layout_width="fill_parent"
            android:layout_height="51dp"
            android:onClick="sendElectronicsBedroomLights"
            android:text="@string/bedroom" />

        <Button
            android:id="@+id/button5"
            android:layout_width="fill_parent"
            android:layout_height="51dp"
            android:onClick="sendElectronicsLivingroomLights"
            android:text="@string/livingroom" />

        <Button
            android:id="@+id/button6"
            android:layout_width="fill_parent"
            android:layout_height="51dp"
            android:onClick="sendElectronicsKitchenLights"
            android:text="@string/kitchen" />

        <Button
            android:id="@+id/button7"
            android:layout_width="fill_parent"
            android:layout_height="51dp"
            android:onClick="sendElectronicsDiningLights"
            android:text="@string/dining" />

        <Button
            android:id="@+id/button8"
            android:layout_width="fill_parent"
            android:layout_height="51dp"
            android:onClick="sendElectronicsPatioLights"
            android:text="@string/patio" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>